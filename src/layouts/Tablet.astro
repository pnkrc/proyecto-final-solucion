---
import TabletMockup from "../components/Tablet.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles/devices.min.css" />
    <title>{title}</title>
  </head>
  <body>
    <TabletMockup>
      <slot />
    </TabletMockup>
  </body>
</html>
<style>
  body {
    font-family: system-ui, sans-serif;
    background: #13151a;

    height: 100dvh;
    display: grid;
    place-items: center;
  }
</style>
